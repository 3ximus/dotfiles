// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "'Source Code Pro for Powerline'",
    //"editor.fontFamily": "'Fira Mono for Powerline'",
    "editor.fontSize": 12,
    "editor.fontWeight": "500",
    "editor.lineHeight": 0,
    "editor.lineNumbers": "relative",
    "editor.insertSpaces": false,
    "editor.snippetSuggestions": "inline",
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "phase",
    "editor.renderWhitespace": "boundary",
    "zenMode.hideTabs": false,
    "zenMode.fullScreen": false,
    "workbench.statusBar.visible": true,
    "window.zoomLevel": 0,
    "workbench.sideBar.location": "left",
    "workbench.activityBar.visible": true,
    "window.menuBarVisibility": "toggle",
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    // themes
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "workbench.iconTheme": "file-icons",
    "markdown.preview.fontFamily": "'Source Code Pro for Powerline', 'Segoe WPC', 'Segoe UI', 'SFUIText-Light', 'HelveticaNeue-Light'",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#ebdbb299",
        "editorCursor.background": "#1d2021"
    },
    "git.confirmSync": false,
    "files.trimTrailingWhitespace": true,
     // default python
    //"python.pythonPath": "/usr/bin/python2.7",
    // Disabling a bunch of stupid warnings
    "python.linting.pylintArgs": [
        "--disable=W0312,W0212,W0621,W0122,W0123,C,R0903,R0902,R0913,E1136"
    ],
    // Fully qualified path to tag file (exuberant ctag file), used to provide workspace symbols.
    "python.workspaceSymbols.tagFilePath": "${workspaceRoot}/.tags",
    //"terminal.integrated.shell.windows": "C:\\Windows\\sysnative\\bash.exe",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.fontSize": 12,
    // VIM
    "vim.autoindent": false,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.foldfix": true,
    "vim.leader": ",",
    "vim.handleKeys": {
        "<C-d>": true
    },
    "vim.easymotion": true,
    "vim.easymotionMarkerFontFamily": "'Source Code Pro for Powerline'",
    "vim.easymotionMarkerForegroundColorTwoChar": "#c9ff65",
    "vim.easymotionMarkerForegroundColorOneChar": "#ff3333",
    "vim.easymotionMarkerBackgroundColor": "#282c34",
    "vim.easymotionMarkerFontSize": "13",
    "vim.easymotionMarkerHeight": 15,

    "todohighlight.isEnable": true,
    "todohighlight.keywords": [{
            "text": "NOTE",
            "color": "#282c34",
            "backgroundColor": "#c9ff65"
        },
        {
            "text": "XXX",
            "color": "#282c34",
            "backgroundColor": "#33ff99"
        },
        {
            "text": "PLACEHOLDER",
            "color": "white",
            "backgroundColor": "#ff5e7c"
        },
        {
            "text": "FIXME",
            "color": "white",
            "backgroundColor": "#ff3333"
        },
        {
            "text": "TODO",
            "color": "white",
            "backgroundColor": "#ff733c"
        }
    ],
    "shellLauncher.shells.linux": [{
            "label": "iPython",
            "shell": "ipython3"
        }
    ],
    "C_Cpp.intelliSenseEngine": "Default",
    "java.errors.incompleteClasspath.severity": "ignore",
    "terminal.integrated.confirmOnExit": true,
    "explorer.confirmDragAndDrop": false,
    "git.decorations.enabled": true,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "gitlens.codeLens.scopes": [
        "containers"
    ],
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.blame.highlight.locations": [
        "gutter",
        "line",
        "overview"
    ],
    "gitlens.recentChanges.highlight.locations": [
        "overview",
        "gutter",
        "line"
    ],
    "gitlens.statusBar.enabled": false,
    "extensions.ignoreRecommendations": true,
    "gitlens.keymap": "alternate",
    "gitlens.historyExplorer.enabled": true
}
