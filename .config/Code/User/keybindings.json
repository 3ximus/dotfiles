// Place your key bindings in this file to overwrite the defaults
[
//
	{ "key": "shift+alt+v", "command": "workbench.action.splitEditor" },
	{ "key": "shift+alt+j", "command": "workbench.action.joinTwoGroups" },
	{ "key": "shift+alt+h", "command": "workbench.action.toggleEditorGroupLayout" },
	{ "key": "shift+alt+r", "command": "workbench.action.reloadWindow" },
	{ "key": "shift+alt+z","command": "workbench.action.toggleZenMode" },
	{ "key": "ctrl+f11","command": "workbench.action.toggleZenMode" },
	{ "key": "alt+shift+l", "command": "gitlens.showQuickFileHistory" },

// move lines
	{ "key": "ctrl+j", "command": "editor.action.moveLinesDownAction", "when": "editorTextFocus && !editorReadonly" },
	{ "key": "ctrl+k", "command": "editor.action.moveLinesUpAction", "when": "editorTextFocus && !editorReadonly" },
	{ "key": "shift+alt+s", "command": "editor.action.showSnippets", "when": "editorTextFocus" },

// lower panels
	{ "key": "ctrl+f1", "command": "workbench.action.terminal.toggleTerminal"},
	{ "key": "shift+alt+p", "command": "workbench.action.togglePanel"},
	{ "key": "shift+alt+o", "command": "workbench.action.output.toggleOutput"},
	{ "key": "ctrl+t", "command": "workbench.action.toggleSidebarVisibility" },

// unbind ctrl+n
	{ "key": "ctrl+n","command": "-workbench.action.files.newUntitledFile" },
	{ "key": "ctrl+f", "command": "-extension.vim_ctrl+f"},
	{ "key": "ctrl+o", "command": "-extension.vim_ctrl+o"},

// this fixes bug where some times tab completion puts '<tab>' instead
	{ "key": "tab","command": "acceptQuickFixSuggestion", "when": "editorFocus && quickFixWidgetVisible" },
	{ "key": "tab","command": "acceptSelectedSuggestion", "when": "editorTextFocus && suggestWidgetVisible" },

// remove trailing white spaces
	{ "key": "shift+alt+t","command": "trailing-spaces.deleteTrailingSpaces", "when": "editorTextFocus" },

// tasks
	{ "key": "f7", "command": "workbench.action.tasks.build" },
	{ "key": "ctrl+f7", "command": "workbench.action.tasks.test" },
	{ "key": "f6", "command": "workbench.action.tasks.runTask" },
	{ "key": "ctrl+f6", "command": "workbench.action.tasks.terminate" },

// tabs
	{ "key": "ctrl+x","command": "workbench.action.closeActiveEditor" },
	{ "key": "ctrl+n", "command": "workbench.action.nextEditor", "when": "editorTextFocus && vim.mode != 'Insert'" },
	{ "key": "ctrl+p", "command": "workbench.action.previousEditor", "when": "editorTextFocus && vim.mode != 'Insert'" },

// remove conflict with integrated terminal
	{ "key": "ctrl+e", "command": "-workbench.action.quickOpen" },
	{ "key": "ctrl+p", "command": "-workbench.action.quickOpen" },

// other
	{ "key": "f3", "command": "workbench.action.gotoSymbol" },
	{ "key": "f4", "command": "workbench.action.quickOpen" },
	{ "key": "f8", "command": "workbench.action.openRecent" },
	{ "key": "ctrl+f4", "command": "workbench.action.selectTheme" },
	{ "key": "ctrl+7", "command": "editor.action.commentLine", "when": "editorTextFocus && !editorReadonly" },
	{ "key": "ctrl+[Period]", "command": "workbench.action.openGlobalKeybindings" },
	{ "key": "ctrl+k ctrl+s", "command": "-workbench.action.openGlobalKeybindings" },

	{ "key": "ctrl+f2", "command": "shellLauncher.launch" }
]
