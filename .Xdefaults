! Configuration for X client applications
! ------------------------------------------------------------------------------
! URXVT Color theme
! ------------------------------------------------------------------------------

!name can be found with fc-list
urxvt*font:				xft:Hack:style=Regular:size=8, \
						xft:Roboto\ Mono\ for\ Powerline:style=Regular:size=8, \
						xft:FreeSerif:style=Regular, \
						xft:unifont:style=Medium:antialias=false
urxvt*termName:         rxvt
urxvt*scrollBar:        false
urxvt*matcher.button:   1
URxvt.transparent:   false
!comment to allow bold
URxvt.boldFont:
Xft*dpi:                96
Xft*antialias:          true
Xft*hinting:            full

! clipboard
urxvt.perl-ext-common: default,clipboard,keyboard-select
urxvt.keysym.M-Escape: perl:keyboard-select:activate
urxvt.keysym.M-C-c:   perl:clipboard:copy
!urxvt.keysym.M-S-v:   perl:clipboard:paste_escaped
urxvt.keysym.M-C-v: perl:clipboard:paste
urxvt.clipboard.copycmd:  xsel -ib
urxvt.clipboard.pastecmd: xsel -ob

URxvt*geometry: 75x35
URxvt*fading:        0
URxvt*tintColor:     #ffffff
URxvt*shading:        0
URxvt*inheritPixmap:     False

urxvt*foreground:       #dedede
urxvt*background: #2d2d2d

