#!/bin/sh

# Wrapper for discord to fix the icons in the tray

/usr/bin/discord &
sleep 4
cp $HOME/Dropbox/Data/plasma/papirus-gruvbox-icons/discord-tray/linux-tray.png $HOME/.config/discord/linux-tray.png
cp $HOME/Dropbox/Data/plasma/papirus-gruvbox-icons/discord-tray/linux-tray-unread.png $HOME/.config/discord/linux-tray-unread.png

